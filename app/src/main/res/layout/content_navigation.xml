<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mich.android.mich.activities.NavigationActivity"
    tools:showIn="@layout/app_bar_navigation">


    <FrameLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
        <FrameLayout android:id="@+id/fragment_placeholder"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

        <FrameLayout
            android:id="@+id/gallery_photo_chooser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera_and_gallery_chooser"/>

            <View
                android:id="@+id/btn_open_gallery"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="start"/>

            <View
                android:id="@+id/btn_take_photo"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="end"/>

        </FrameLayout>


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btn_tab1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_home_tab"/>

        <ImageView
            android:id="@+id/btn_tab2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_vs_tab"/>

        <ImageView
            android:id="@+id/btn_tab3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_camera_tab"/>

        <ImageView
            android:id="@+id/btn_tab4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_search_tab"/>

        <ImageView
            android:id="@+id/btn_tab5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_profile_tab"/>

    </LinearLayout>

</LinearLayout>
